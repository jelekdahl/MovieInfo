@page "/"
@layout HomeLayout

<PageTitle>Home</PageTitle>
<!--Page Background-->
<div class="pageStyle h-100 d-flex justify-content-center">
    <div class="row container-xxl h-100">
        <div class="col-12 col-md-10 offset-md-1 col-xl-6 offset-xl-0 d-flex flex-column justify-content-md-center order-last order-xl-first text-center mb-3 my-xl-0">
            <div class="title">
                <div>Reel-Time Rankings</div>
            </div>
            <div class="subtitle">
                Reel-Time Rankings is an app using data provided by
                <a href="https://www.themoviedb.org/" target="_blank" rel="noopener noreferrer"
                    class="link-warning">The Movie DB</a> API.
                This app allows you to browse movies that are now playing in theatres,
                movies that are currently popular with TMDB users, save a list of your
                favorite movies, or search for movies by title.
            </div>
            <div class="mt-3">
                <h3>Try It Out Now!</h3>
                <div class="hstack gap-2 justify-content-center">
                    <a href="now-playing" class="btn btn-warning">Now Playing</a>
                    <a href="popular" class="btn btn-warning">Popular</a>
                    <a href="favorites" class="btn btn-warning">Favorites</a>
                </div>
            </div>
            <div class="mt-3">
                <div class="subTitle">Built with pride using:</div>
                <div class="hstack justify-content-center my-2">
                    <div><i class="devicons devicon-csharp-plain colored me-1"></i></div>
                    <div><i class="devicons devicon-blazor-original colored me-1"></i></div>
                    <div><i class="devicons devicon-bootstrap-plain colored me-1"></i></div>
                    <div><i class="devicons devicon-javascript-plain colored me-1"></i></div>
                    <div><i class="devicons devicon-html5-plain colored me-1"></i></div>
                    <div><i class="devicons devicon-css3-plain colored me-1"></i></div>
                </div>
            </div>
        </div>

        <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4 col-xl-6 offset-xl-0 d-flex flex-row justify-content-center align-items-center">
            <AppLogo />
        </div>
    </div>
</div>